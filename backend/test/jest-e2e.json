{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "..",
  "testRegex": ".*\\.e2e-spec\\.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^mime$": "<rootDir>/test/utils/mime-mock.js"
  },
  "collectCoverageFrom": [
    "src/**/*.(t|j)s",
    "!src/scripts/**",
    "!src/**/*.spec.ts"
  ],
  "coverageDirectory": "../coverage-e2e",
  "testEnvironment": "node",
  "maxWorkers": 1,
  "setupFiles": ["<rootDir>/test/setup-e2e.ts"]
}
